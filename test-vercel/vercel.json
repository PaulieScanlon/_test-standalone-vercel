{
  "version": 2,
  "installCommand": "npm install --omit=dev",
  "builds": [
    {
      "src": ".mastra/output/**",
      "use": "@vercel/static"
    },
    {
      "src": "index.mjs",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["index.mjs", "instrumentation.mjs", "mastra.mjs", "package-lock.json", "package.json", "telemetry-config.mjs", "tools", "tools.mjs", "tools/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "index.mjs"
    }
  ]
}
